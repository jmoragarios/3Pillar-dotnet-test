@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Prueba Técnica</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Autos</h2>
        <div>
            <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-hover table-bordered display responsive nowrap" id="TablaListado" width="100%">
                <thead>
                    <tr>
                        <th width="10%" data-priority="1">Sku</th>
                        <th width="20%" data-priority="2">Descripción</th>
                        <th width="20%" data-priority="3">Marca</th>
                        <th width="20%" data-priority="3">Cantidad</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

    </div>

</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>



<script type="text/javascript">

    $(document).ready(function () {
        listarAutos();
    });

    var listarAutos = function () {
        $.ajax({
            type: "POST",
            url: '@Url.Action("ObtenerAutos", "Home")',
            datatype: "json",
            cache: false,
            success: function (data) {
                console.log(data);
                var $filas = '';

                $.each(data, function (i, item) {


                    var $sku = '<td class=".edit" title="">' + item.Sku + '</td>';
                    var $descricion = '<td class=".edit" title="">' + item.Descripcion + '</td>';
                    var $marca = '<td class=".edit" title="">' + item.Marca.Descripcion + '</td>';
                    var $cantidad = '<td class=".edit" title="">' + item.Cantidad + '</td>';

                    $filas += '<tr class="odd" role="row">';
                    $filas += $sku;
                    $filas += $descricion;
                    $filas += $marca;
                    $filas += $cantidad;

                });
                $("#TablaListado tbody").html($filas);

            }
        });
    };

</script>